<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TapCounterApp.MainPage"
             Title="Tap Counter"
             BackgroundColor="White">

    <Grid Padding="20" RowDefinitions="*,Auto">

        <VerticalStackLayout Grid.Row="0" Spacing="16" VerticalOptions="Center">

            <!-- Count label -->
            <Label x:Name="CountLabel"
                   Text="0"
                   FontSize="64"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <!-- Button -->
            <Button Text="Tap me!"
                    FontSize="22"
                    Padding="20,12"
                    HorizontalOptions="Center"
                    Clicked="OnTapButtonClicked" />

            <!-- Status label -->
            <Label x:Name="StatusLabel"
                   Text="Welcome"
                   FontSize="18"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>

        <!-- Footer -->
        <Label Grid.Row="1"
               Text="Created by Brandon Stroik – Intro Mobile Dev"
               FontSize="12"
               TextColor="Gray"
               HorizontalOptions="Center"
               Margin="0,10,0,0" />

    </Grid>
</ContentPage>
